# Environment Template File
# This file contains template values and documentation
# The main configuration is in environments.json
# Copy this to .env and customize for local overrides

# =============================================================================
# AZURE ACCOUNT INFORMATION (override in .env if needed)
# =============================================================================
# AZURE_SUBSCRIPTION_ID=your-subscription-id-here
# AZURE_TENANT_ID=your-tenant-id-here  
# AZURE_LOCATION=eastasia

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================
GITHUB_BRANCH=main
GITHUB_REPOSITORY_URL=

# =============================================================================
# FEATURE FLAGS (optional)
# =============================================================================
ENABLE_APPLICATION_INSIGHTS=false
ENABLE_SSL=true
CSP_LEVEL=moderate

# =============================================================================
# RESOURCE NAMING CONFIGURATION
# =============================================================================

# Resource Group name (follows naming convention: *-RG)
RESOURCE_GROUP_NAME=jyothi-resume-RG

# Static Web App name (follows naming convention: *-WebApp)
STATIC_WEB_APP_NAME=jyothi-resume-WebApp

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Enable/disable staging environments
ENABLE_STAGING_ENVIRONMENTS=true

# Public network access (Enabled/Disabled)
PUBLIC_NETWORK_ACCESS=Enabled

# Allow custom domains
ALLOW_CUSTOM_DOMAINS=true

# =============================================================================
# TAGGING CONFIGURATION
# =============================================================================

# Project identifier
PROJECT_NAME=jyothi-resume-website

# Cost center for billing tracking
COST_CENTER=personal

# Resource owner
RESOURCE_OWNER=jyothi-prakash

# Application tier
APPLICATION_TIER=frontend

# =============================================================================
# GITHUB CONFIGURATION (Optional)
# =============================================================================

# GitHub repository URL (for CI/CD integration)
GITHUB_REPOSITORY_URL=

# GitHub branch for deployment
GITHUB_BRANCH=main

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable Application Insights (true/false)
ENABLE_APPLICATION_INSIGHTS=false

# Enable custom domain SSL
ENABLE_SSL=true

# Content Security Policy level (strict/moderate/basic)
CSP_LEVEL=moderate
